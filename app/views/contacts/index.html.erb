<p style="color: green"><%= notice %></p>

<h1>Contacts</h1>

<%= form_tag(contacts_path, method: :get) do %>
  <%= label_tag(:search, "Search by name:") %>
  <%= text_field_tag(:full_name, params[:full_name], class: "search-input", placeholder: "Enter a name") %>
  <%= submit_tag("Search") %>
  <%= link_to "Reset", contacts_path %>
<% end %>

<div id="contacts">
  <% @contacts.each do |contact| %>
    <%= render contact %>
    <p>
      <%= link_to "Show this contact", contact %>
    </p>
    <p>
      <%= link_to "New address", new_contact_address_path(contact) %>
    </p>
  <% end %>
</div>

<%= link_to "New contact", new_contact_path %>
